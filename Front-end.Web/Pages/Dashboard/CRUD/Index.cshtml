@page
@model Front_end.Web.Pages.Dashboard.CRUD.IndexModel
@{
    ViewData["Title"] = "Data Management";
    Layout = "_DashboardLayout";
}

<div class="mb-4">
    <h1>Data Management</h1>
    <p style="color: var(--color-gray-500);">Manage your application's data records.</p>
</div>

<div class="grid grid-3">
    <!-- Employee Management Card -->
    <a href="/Dashboard/CRUD/Employee/Index" class="card" style="text-decoration: none; color: inherit; transition: transform 0.2s, box-shadow 0.2s;">
        <div class="card-body text-center">
            <div style="width: 60px; height: 60px; background: rgba(37, 99, 235, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; color: var(--color-primary); font-size: 1.5rem;">
                <i class="fas fa-users"></i>
            </div>
            <h3 class="card-title">Employees</h3>
            <p style="color: var(--color-gray-500); margin-bottom: 0;">Manage employee records, roles, and details.</p>
        </div>
    </a>

    <!-- Placeholder for Departments -->
    <div class="card" style="opacity: 0.7; cursor: not-allowed;">
        <div class="card-body text-center">
            <div style="width: 60px; height: 60px; background: rgba(100, 116, 139, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; color: var(--color-gray-500); font-size: 1.5rem;">
                <i class="fas fa-building"></i>
            </div>
            <h3 class="card-title">Departments</h3>
            <p style="color: var(--color-gray-500); margin-bottom: 0;">Coming Soon</p>
        </div>
    </div>
</div>

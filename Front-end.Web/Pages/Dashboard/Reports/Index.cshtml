@page
@model Front_end.Web.Pages.Dashboard.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
    Layout = "_DashboardLayout";
}

<div class="mb-4">
    <h1>Analytics & Reports</h1>
    <p style="color: var(--color-gray-500);">Visual insights and detailed system reports.</p>
</div>

<!-- Summary Cards -->
<div class="grid grid-4 mb-4">
    <div class="card p-3">
        <p style="color: var(--color-gray-500); font-size: 0.8rem; margin-bottom: 5px;">Total Revenue</p>
        <h3 style="margin: 0; font-size: 1.5rem;">$45,200</h3>
        <p style="color: var(--color-success); font-size: 0.8rem; margin: 0;">+12% vs last month</p>
    </div>
    <div class="card p-3">
        <p style="color: var(--color-gray-500); font-size: 0.8rem; margin-bottom: 5px;">Active Users</p>
        <h3 style="margin: 0; font-size: 1.5rem;">1,240</h3>
        <p style="color: var(--color-success); font-size: 0.8rem; margin: 0;">+5% vs last month</p>
    </div>
    <div class="card p-3">
        <p style="color: var(--color-gray-500); font-size: 0.8rem; margin-bottom: 5px;">New Employees</p>
        <h3 style="margin: 0; font-size: 1.5rem;">12</h3>
        <p style="color: var(--color-primary); font-size: 0.8rem; margin: 0;">This month</p>
    </div>
    <div class="card p-3">
        <p style="color: var(--color-gray-500); font-size: 0.8rem; margin-bottom: 5px;">Pending Tasks</p>
        <h3 style="margin: 0; font-size: 1.5rem;">8</h3>
        <p style="color: var(--color-warning); font-size: 0.8rem; margin: 0;">Requires attention</p>
    </div>
</div>

<div class="grid grid-2">
    <!-- Chart Placeholder 1 -->
    <div class="card">
        <div class="card-header flex-between">
            <h3 class="card-title">Revenue Overview</h3>
            <select class="form-control" style="width: auto; padding: 5px 10px; font-size: 0.8rem;">
                <option>This Year</option>
                <option>Last Year</option>
            </select>
        </div>
        <div class="card-body flex-center" style="height: 300px; background: var(--color-gray-50); border-radius: var(--border-radius-md);">
            <div style="text-align: center; color: var(--color-gray-400);">
                <i class="fas fa-chart-area" style="font-size: 3rem; margin-bottom: 1rem;"></i>
                <p>Chart Visualization Placeholder</p>
            </div>
        </div>
    </div>

    <!-- Chart Placeholder 2 -->
    <div class="card">
        <div class="card-header flex-between">
            <h3 class="card-title">User Growth</h3>
            <select class="form-control" style="width: auto; padding: 5px 10px; font-size: 0.8rem;">
                <option>Last 6 Months</option>
                <option>Last 12 Months</option>
            </select>
        </div>
        <div class="card-body flex-center" style="height: 300px; background: var(--color-gray-50); border-radius: var(--border-radius-md);">
            <div style="text-align: center; color: var(--color-gray-400);">
                <i class="fas fa-chart-bar" style="font-size: 3rem; margin-bottom: 1rem;"></i>
                <p>Chart Visualization Placeholder</p>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h3 class="card-title">Available Reports</h3>
    </div>
    <div class="card-body">
        <div class="grid grid-3">
            <a href="#" class="btn btn-outline" style="justify-content: flex-start;">
                <i class="fas fa-file-alt"></i> Monthly Sales Report
            </a>
            <a href="#" class="btn btn-outline" style="justify-content: flex-start;">
                <i class="fas fa-file-alt"></i> Employee Attendance
            </a>
            <a href="#" class="btn btn-outline" style="justify-content: flex-start;">
                <i class="fas fa-file-alt"></i> Expense Summary
            </a>
            <a href="#" class="btn btn-outline" style="justify-content: flex-start;">
                <i class="fas fa-file-alt"></i> Tax Documents
            </a>
            <a href="#" class="btn btn-outline" style="justify-content: flex-start;">
                <i class="fas fa-file-alt"></i> User Activity Log
            </a>
            <a href="#" class="btn btn-outline" style="justify-content: flex-start;">
                <i class="fas fa-file-alt"></i> System Health Check
            </a>
        </div>
    </div>
</div>

@page
@model Front_end.Web.Pages.Dashboard.PDF.IndexModel
@{
    ViewData["Title"] = "PDF Generation";
    Layout = "_DashboardLayout";
}

<div class="mb-4">
    <h1>PDF Reports</h1>
    <p style="color: var(--color-gray-500);">Generate and download professional PDF reports.</p>
</div>

<div class="grid grid-2">
    <!-- Employee Report Card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-users" style="color: var(--color-primary); margin-right: 10px;"></i>
                Employee List
            </h3>
        </div>
        <div class="card-body">
            <p>Generate a complete list of all employees with their current status and department.</p>
            <div class="form-group">
                <label class="form-label">Department Filter</label>
                <select class="form-control">
                    <option>All Departments</option>
                    <option>IT</option>
                    <option>HR</option>
                    <option>Sales</option>
                </select>
            </div>
            <button class="btn btn-primary" style="width: 100%;">
                <i class="fas fa-download"></i> Download PDF
            </button>
        </div>
    </div>

    <!-- Payroll Summary Card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-file-invoice-dollar" style="color: var(--color-success); margin-right: 10px;"></i>
                Payroll Summary
            </h3>
        </div>
        <div class="card-body">
            <p>Export payroll summary for a specific month, including deductions and bonuses.</p>
            <div class="form-group">
                <label class="form-label">Select Month</label>
                <input type="month" class="form-control" value="@DateTime.Now.ToString("yyyy-MM")">
            </div>
            <button class="btn btn-primary" style="width: 100%;">
                <i class="fas fa-download"></i> Download PDF
            </button>
        </div>
    </div>

    <!-- Performance Review Card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-chart-pie" style="color: var(--color-accent); margin-right: 10px;"></i>
                Performance Review
            </h3>
        </div>
        <div class="card-body">
            <p>Generate performance review templates or summary reports for employees.</p>
            <div class="form-group">
                <label class="form-label">Review Period</label>
                <select class="form-control">
                    <option>Q1 2025</option>
                    <option>Q4 2024</option>
                    <option>Annual 2024</option>
                </select>
            </div>
            <button class="btn btn-primary" style="width: 100%;">
                <i class="fas fa-download"></i> Download PDF
            </button>
        </div>
    </div>
    
    <!-- Custom Report Card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-cogs" style="color: var(--color-gray-600); margin-right: 10px;"></i>
                Custom Report
            </h3>
        </div>
        <div class="card-body">
            <p>Create a custom report by selecting specific fields and date ranges.</p>
            <div class="form-group">
                <label class="form-label">Date Range</label>
                <div class="flex" style="gap: 10px;">
                    <input type="date" class="form-control">
                    <input type="date" class="form-control">
                </div>
            </div>
            <button class="btn btn-outline" style="width: 100%;">
                <i class="fas fa-magic"></i> Create Custom Report
            </button>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h3 class="card-title">Recent Downloads</h3>
    </div>
    <div class="card-body">
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="border-bottom: 2px solid var(--color-gray-100);">
                    <th class="text-left p-2">Report Name</th>
                    <th class="text-left p-2">Date</th>
                    <th class="text-left p-2">Generated By</th>
                    <th class="text-right p-2">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr style="border-bottom: 1px solid var(--color-gray-50);">
                    <td class="p-2"> <i class="fas fa-file-pdf" style="color: var(--color-danger); margin-right: 5px;"></i> Employee_List_Oct.pdf</td>
                    <td class="p-2">Oct 24, 2025</td>
                    <td class="p-2">Admin</td>
                    <td class="text-right p-2">
                        <button class="btn btn-sm btn-outline"><i class="fas fa-download"></i></button>
                    </td>
                </tr>
                <tr style="border-bottom: 1px solid var(--color-gray-50);">
                    <td class="p-2"> <i class="fas fa-file-pdf" style="color: var(--color-danger); margin-right: 5px;"></i> Payroll_Sept_2025.pdf</td>
                    <td class="p-2">Sep 30, 2025</td>
                    <td class="p-2">Admin</td>
                    <td class="text-right p-2">
                        <button class="btn btn-sm btn-outline"><i class="fas fa-download"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
